# Jenkins Environment Configuration
# Generated by Ansible for {{ deployment_mode }} deployment
# Generated at: {{ ansible_date_time.iso8601 }}

# Jenkins Master Configuration
JENKINS_MASTER_PORT={{ jenkins_master_port }}
JENKINS_AGENT_PORT={{ jenkins_agent_port }}
JENKINS_ADMIN_USER={{ jenkins_admin_user }}
JENKINS_ADMIN_PASSWORD={{ jenkins_admin_password }}

# Memory Settings
JENKINS_MASTER_MEMORY={{ jenkins_master_memory }}
JENKINS_MASTER_MEMORY_MIN={{ jenkins_master_memory_min }}

# Network Configuration
JENKINS_NETWORK_SUBNET={{ jenkins_network_subnet }}

{% if jenkins_ssl_enabled %}
# SSL Certificates Path
CERTIFICATES_PATH=./certificates
{% endif %}

# Timezone
TZ={{ ansible_date_time.tz | default('UTC') }}

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=jenkins-{{ deployment_mode }}

# Deployment Information
DEPLOYMENT_MODE={{ deployment_mode }}
GENERATED_BY=ansible
GENERATED_AT={{ ansible_date_time.iso8601 }}